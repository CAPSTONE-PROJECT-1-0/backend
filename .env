# Konfigurasi Server Aplikasi
NODE_ENV=development
PORT=3000
HOST=localhost

# Konfigurasi Database PostgreSQL
DB_HOST=127.0.0.1
DB_PORT=5433 # Port standar PostgreSQL
DB_USERNAME=postgres # Ganti dengan username PostgreSQL Anda
DB_PASSWORD=postgres # GANTI DENGAN PASSWORD ANDA YANG AMAN
DB_NAME=backend_capstone # Nama database development Anda
DB_LOGGING=true # Setel ke false di production atau jika tidak ingin melihat log SQL

# Konfigurasi Database Test (Opsional, jika Anda menjalankan tes terpisah)
# DB_NAME_TEST=hapi_project_test

# Konfigurasi Database Production (Biasanya diatur di environment server production)
# DB_USERNAME_PROD=
# DB_PASSWORD_PROD=
# DB_NAME_PROD=
# DB_HOST_PROD=

# Kunci Rahasia Aplikasi (Contoh)
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=1h # Waktu kedaluwarsa token JWT
JWT_MAX_AGE_SEC=3600 # Waktu maksimum dalam detik (1 jam = 3600 detik)
